{
  "manifest_version": 3,
  "name": "Applymate Extension",
  "version": "1.0",
  "description": "Quickly add job applications to your Applymate from any job posting page",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5432/*",
    "https://job-tracker-nghc.onrender.com/*",
    "https://applymate-henna.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Add to Applymate"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
